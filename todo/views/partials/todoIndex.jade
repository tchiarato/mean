div(class='jumbotron text-center')
  h1 Todo List 
    span(class='label label-info') {{todos.length}}

div#todo-list(class='row')
  div(class='col-sm-4 col-sm-offset-4')
    div(class='checkbox', ng-repeat='todo in todos')
      label
        input(type='checkbox', ng-click='deleteTodo(todo._id)')
        | {{todo.text}}

div#todo-form(class='row')
  div(class='col-sm-8 col-sm-offset-2 text-center')
    form
      div.form-group
        input(type='text', class='form-control input-lg text-center', placeholder='new todo', ng-model='formData.text')
      button.btn.btn-primary.btn-lg(ng-click='createTodo()') Add